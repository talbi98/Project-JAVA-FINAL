<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15.0" style="-fx-background-color: #1a1a1d; -fx-padding: 30;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="JavaFXProject.FormulaireClientController">
    
    <Label style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" text="Nouveau Client" />

    <Label style="-fx-text-fill: #888; -fx-font-size: 11px;" text="Informations personnelles" />

    <TextField fx:id="txtNom" promptText="Nom (ex: Dupont)" style="-fx-background-color: #333; -fx-text-fill: white;" />

    <TextField fx:id="txtPrenom" promptText="Prénom (ex: Jean)" style="-fx-background-color: #333; -fx-text-fill: white;" />

    <TextField fx:id="txtTel" promptText="Téléphone (ex: 06 12 34 56 78)" style="-fx-background-color: #333; -fx-text-fill: white;" />

    <TextField fx:id="txtEmail" promptText="Email (ex: jean.dupont@mail.com)" style="-fx-background-color: #333; -fx-text-fill: white;" />

    <HBox alignment="CENTER_RIGHT" spacing="15.0" style="-fx-padding: 20 0 0 0;">
        <Button fx:id="btnAnnuler" style="-fx-background-color: transparent; -fx-text-fill: #888; -fx-cursor: hand; -fx-border-color: #555; -fx-border-radius: 5;" text="Annuler" />
        <Button fx:id="btnValider" style="-fx-background-color: #10b981; -fx-text-fill: black; -fx-font-weight: bold; -fx-cursor: hand; -fx-background-radius: 5;" text="ENREGISTRER CLIENT" />
    </HBox>

</VBox>