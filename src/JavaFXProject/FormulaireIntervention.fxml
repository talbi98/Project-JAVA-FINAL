<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15.0" style="-fx-background-color: #1a1a1d; -fx-padding: 30;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="JavaFXProject.FormulaireInterventionController">
    
    <Label style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" text="Nouvelle Intervention" />

    <VBox spacing="5" alignment="CENTER_LEFT">
        <Label style="-fx-text-fill: #888;" text="Véhicule (Statut DISPO ou ATELIER)" />
        <ComboBox fx:id="comboVehicule" prefWidth="350.0" promptText="Choisir le véhicule..." style="-fx-base: #333; -fx-control-inner-background: #333; -fx-text-fill: white;" />
    </VBox>

    <VBox spacing="5" alignment="CENTER_LEFT">
        <Label style="-fx-text-fill: #888;" text="Mécanicien responsable" />
        <ComboBox fx:id="comboMecanicien" prefWidth="350.0" promptText="Choisir le mécanicien..." style="-fx-base: #333; -fx-control-inner-background: #333; -fx-text-fill: white;" />
    </VBox>

    <TextArea fx:id="txtDescription" prefHeight="100.0" prefWidth="350.0" promptText="Description de la panne ou des travaux..." style="-fx-control-inner-background: #333; -fx-text-fill: white;" wrapText="true" />

    <TextField fx:id="txtPrix" promptText="Coût Main d'Oeuvre (€)" style="-fx-background-color: #333; -fx-text-fill: white;" />

    <HBox alignment="CENTER_RIGHT" spacing="15.0" style="-fx-padding: 20 0 0 0;">
        <Button fx:id="btnAnnuler" style="-fx-background-color: transparent; -fx-text-fill: #888; -fx-cursor: hand; -fx-border-color: #555; -fx-border-radius: 5;" text="Annuler" />
        <Button fx:id="btnValider" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-background-radius: 5;" text="LANCER INTERVENTION" />
    </HBox>

</VBox>