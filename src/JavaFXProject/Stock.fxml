<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.SVGPath?>

<BorderPane prefHeight="800.0" prefWidth="1200.0" stylesheets="@application.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="JavaFXProject.StockController">
   
   <left>
      <VBox prefWidth="260.0" styleClass="sidebar" BorderPane.alignment="CENTER">
         <children>
            <HBox styleClass="logo-box">
               <children>
                  <Label styleClass="logo-g" text="G" />
                  <Label styleClass="logo-text" text=" GARAGE" />
                  <Label styleClass="logo-text, logo-accent" text="MGR" />
               </children>
            </HBox>
            
            <Label style="-fx-text-fill: #555; -fx-font-size: 11px; -fx-padding: 0 0 5 10; -fx-font-weight: bold;" text="MENU PRINCIPAL" />
            
            <Button fx:id="btnDashboard" maxWidth="Infinity" mnemonicParsing="false" styleClass="menu-btn" text="Tableau de Bord" onAction="#handleBtnDashboard" />
            <Button maxWidth="Infinity" mnemonicParsing="false" styleClass="menu-btn, menu-btn-active" text="Stock Véhicules" />
            <Button maxWidth="Infinity" mnemonicParsing="false" styleClass="menu-btn" text="Ventes &amp; Clients" />
            <Button maxWidth="Infinity" mnemonicParsing="false" styleClass="menu-btn" text="Atelier &amp; SAV" />
            
            <Pane VBox.vgrow="ALWAYS" /> 
            
            <HBox alignment="CENTER_LEFT" spacing="12.0" style="-fx-padding: 20 0 0 0; -fx-border-color: #333; -fx-border-width: 1 0 0 0;">
               <children>
                  <Label style="-fx-background-color: #333; -fx-background-radius: 20; -fx-text-fill: #ff9800; -fx-padding: 8 14; -fx-font-weight: bold; -fx-font-size: 14px;" text="A" />
                  <VBox>
                     <children>
                        <Label style="-fx-text-fill: white; -fx-font-weight: bold;" text="Admin" />
                        <Label style="-fx-text-fill: #666; -fx-font-size: 11px;" text="Directeur" />
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </left>

   <center>
      <VBox spacing="25.0" styleClass="content-area" BorderPane.alignment="CENTER">
         <children>
            <VBox>
               <children>
                  <Label styleClass="page-title" text="Gestion du Stock" />
                  <Label styleClass="page-subtitle" text="Consultez, ajoutez ou modifiez le parc automobile." />
               </children>
            </VBox>
            
            <HBox alignment="CENTER_LEFT" spacing="15.0">
                <children>
                  
                    <ComboBox fx:id="comboMarque" promptText="Marque" prefWidth="150.0" style="-fx-background-color: #1e1e1e; -fx-text-fill: white; -fx-background-radius: 8;" />
                    <ComboBox fx:id="comboStatut" promptText="Statut" prefWidth="150.0" style="-fx-background-color: #1e1e1e; -fx-text-fill: white; -fx-background-radius: 8;" />
                    <Pane HBox.hgrow="ALWAYS" />
                    <Button text="+ Ajouter Véhicule" style="-fx-background-color: #ff9800; -fx-text-fill: black; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand; -fx-padding: 8 15;" />
                </children>
            </HBox>

            <VBox styleClass="stat-card" VBox.vgrow="ALWAYS">
               <children>
                  <TableView fx:id="tableStock" VBox.vgrow="ALWAYS">
                    <columns>
                      <TableColumn fx:id="colId" prefWidth="50.0" text="#" sortable="false" />
                      <TableColumn fx:id="colMarque" prefWidth="150.0" text="MARQUE" sortable="false" />
                      <TableColumn fx:id="colModele" prefWidth="200.0" text="MODÈLE" sortable="false" />
                      <TableColumn fx:id="colPrix" prefWidth="150.0" text="PRIX VENTE" sortable="false" />
                      <TableColumn fx:id="colStatut" prefWidth="120.0" text="STATUT" sortable="false" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
            </VBox>
         </children>
      </VBox>
   </center>
</BorderPane>