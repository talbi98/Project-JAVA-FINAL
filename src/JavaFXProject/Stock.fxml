<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<!-- Lien avec le contrôleur Java -->
<BorderPane prefHeight="800.0" prefWidth="1200.0" stylesheets="@application.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="JavaFXProject.StockController">
   
   <!-- === BARRE LATÉRALE (SIDEBAR) === -->
   <left>
      <VBox prefWidth="260.0" styleClass="sidebar" BorderPane.alignment="CENTER">
         <children>
            <!-- Bloc Logo -->
            <HBox styleClass="logo-box">
               <children>
                  <Label styleClass="logo-g" text="G" />
                  <Label styleClass="logo-text" text=" GARAGE" />
                  <Label styleClass="logo-text, logo-accent" text="MGR" />
               </children>
            </HBox>
            
            <Label style="-fx-text-fill: #555; -fx-font-size: 11px; -fx-padding: 20 0 5 10; -fx-font-weight: bold; -fx-letter-spacing: 1px;" text="MENU PRINCIPAL" />
            
            <!-- Boutons de Navigation -->
            <Button maxWidth="Infinity" mnemonicParsing="false" onAction="#handleBtnDashboard" styleClass="menu-btn" text="Tableau de Bord" />
            <Button maxWidth="Infinity" mnemonicParsing="false" styleClass="menu-btn, menu-btn-active" text="Stock Véhicules" />
            <Button maxWidth="Infinity" mnemonicParsing="false" onAction="#handleBtnCommerce" styleClass="menu-btn" text="Ventes &amp; Clients" />
            <Button maxWidth="Infinity" mnemonicParsing="false" styleClass="menu-btn" text="Atelier &amp; SAV" />
            
            <Pane VBox.vgrow="ALWAYS" /> 
            
            <!-- Pied de Sidebar (Profil Admin) -->
            <HBox alignment="CENTER_LEFT" spacing="12.0" style="-fx-padding: 20 0 0 0; -fx-border-color: #333; -fx-border-width: 1 0 0 0;">
               <children>
                  <Label style="-fx-background-color: #333; -fx-background-radius: 20; -fx-text-fill: #ff9800; -fx-padding: 8 14; -fx-font-weight: bold; -fx-font-size: 14px;" text="A" />
                  <VBox>
                     <children>
                        <Label style="-fx-text-fill: white; -fx-font-weight: bold;" text="Admin" />
                        <Label style="-fx-text-fill: #666; -fx-font-size: 11px;" text="Directeur" />
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </left>

   <!-- === CONTENU CENTRAL === -->
   <center>
      <VBox spacing="25.0" styleClass="content-area" BorderPane.alignment="CENTER">
         <children>
            <!-- En-tête de page -->
            <VBox spacing="5.0">
               <children>
                  <Label styleClass="page-title" text="Gestion du Stock" />
                  <Label styleClass="page-subtitle" text="Visualisez et gérez votre parc automobile d'exception." />
               </children>
            </VBox>
            
            <!-- BARRE D'OUTILS (Filtres et Recherche) -->
            <HBox alignment="CENTER_LEFT" spacing="15.0">
                <children>
                    <!-- Champ de recherche textuelle -->
                    <TextField fx:id="txtRecherche" prefWidth="300.0" promptText="Rechercher un modèle ou une marque..." style="-fx-background-color: #1e1e1e; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 10 15; -fx-border-color: #333; -fx-border-radius: 8;" />
                    
                    <!-- Filtres par catégorie -->
                    <ComboBox fx:id="comboMarque" prefWidth="160.0" promptText="Marque" style="-fx-background-color: #1e1e1e; -fx-text-fill: white;" />
                    <ComboBox fx:id="comboStatut" prefWidth="160.0" promptText="Statut" style="-fx-background-color: #1e1e1e; -fx-text-fill: white;" />
                    
                    <Pane HBox.hgrow="ALWAYS" />
                    
                    <!-- Bouton Action -->
                    <Button onAction="#handleAjouterVehicule" style="-fx-background-color: #ff9800; -fx-text-fill: black; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand; -fx-padding: 10 20;" text="+ AJOUTER VÉHICULE" />
                </children>
            </HBox>

            <!-- ZONE DU TABLEAU (CARD STYLE) -->
            <VBox styleClass="stat-card" VBox.vgrow="ALWAYS">
               <children>
                  <TableView fx:id="tableStock" VBox.vgrow="ALWAYS">
                    <columns>
                      <TableColumn fx:id="colId" maxWidth="60.0" minWidth="40.0" prefWidth="50.0" text="ID" />
                      <TableColumn fx:id="colMarque" prefWidth="180.0" text="MARQUE" />
                      <TableColumn fx:id="colModele" prefWidth="250.0" text="MODÈLE" />
                      <TableColumn fx:id="colPrix" prefWidth="150.0" text="PRIX DE VENTE" />
                      <TableColumn fx:id="colStatut" prefWidth="140.0" text="STATUT" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </children>
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>