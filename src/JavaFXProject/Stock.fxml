<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="800.0" prefWidth="1200.0" style="-fx-background-color: #121212;" stylesheets="@application.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="JavaFXProject.StockController">
   
   <left>
      <VBox prefWidth="260.0" styleClass="sidebar" BorderPane.alignment="CENTER">
         <children>
            <HBox styleClass="logo-box"><Label styleClass="logo-g" text="G" /><Label styleClass="logo-text" text=" GARAGE MGR" /></HBox>
            <Label style="-fx-text-fill: #555; -fx-font-size: 11px; -fx-padding: 0 0 5 10; -fx-font-weight: bold;" text="MENU PRINCIPAL" />
            <Button onAction="#handleBtnDashboard" maxWidth="Infinity" styleClass="menu-btn" text="Tableau de Bord" />
            <Button maxWidth="Infinity" styleClass="menu-btn, menu-btn-active" text="Stock Véhicules" />
            <Button onAction="#handleBtnCommerce" maxWidth="Infinity" styleClass="menu-btn" text="Ventes &amp; Clients" />
            <Button onAction="#handleBtnAtelier" maxWidth="Infinity" styleClass="menu-btn" text="Atelier &amp; SAV" />            
            <Button fx:id="btnFactures" onAction="#handleBtnFactures" maxWidth="Infinity" styleClass="menu-btn" text="Factures &amp; Compta" />
            <Pane VBox.vgrow="ALWAYS" /> 
            <Button onAction="#handleLogout" text="SE DÉCONNECTER" maxWidth="Infinity" style="-fx-background-color: transparent; -fx-text-fill: #ff6b6b; -fx-alignment: CENTER_LEFT; -fx-padding: 12 20; -fx-cursor: hand; -fx-font-weight: bold;" />
            <HBox alignment="CENTER_LEFT" spacing="12.0" style="-fx-padding: 20 0 0 0; -fx-border-color: #333; -fx-border-width: 1 0 0 0;">
               <Label fx:id="lblUserInitial" style="-fx-background-color: #ff9800; -fx-background-radius: 20; -fx-text-fill: black; -fx-padding: 8 14; -fx-font-weight: bold;" text="A" />
               <VBox><Label fx:id="lblUserName" style="-fx-text-fill: white; -fx-font-weight: bold;" text="User" /><Label fx:id="lblUserRole" style="-fx-text-fill: #666; -fx-font-size: 11px;" text="Role" /></VBox>
            </HBox>
         </children>
      </VBox>
   </left>
   
   <center>
      <VBox spacing="20.0" styleClass="content-area" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="15.0">
               <VBox><Label styleClass="page-title" text="Gestion du Stock" /><Label styleClass="page-subtitle" text="Visualisez et gérez votre parc automobile d'exception." /></VBox>
               
               <Pane HBox.hgrow="ALWAYS" />
               
               <ComboBox fx:id="comboMarque" prefWidth="150.0" promptText="Marque" style="-fx-background-color: #1e1e1e; -fx-mark-color: white;" />
               <ComboBox fx:id="comboStatut" prefWidth="150.0" promptText="Statut" style="-fx-background-color: #1e1e1e; -fx-mark-color: white;" />
               
               <Button fx:id="btnAjouterVehicule" onAction="#handleAjouterVehicule" text="+ AJOUTER" style="-fx-background-color: #ff9800; -fx-text-fill: black; -fx-font-weight: bold; -fx-cursor: hand;" />
            </HBox>
            
            <VBox styleClass="stat-card" VBox.vgrow="ALWAYS">
               <TableView fx:id="tableStock" VBox.vgrow="ALWAYS">
                  <columns>
                     <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
                     <TableColumn fx:id="colMarque" prefWidth="150.0" text="MARQUE" />
                     <TableColumn fx:id="colModele" prefWidth="200.0" text="MODÈLE" />
                     <TableColumn fx:id="colPrix" prefWidth="150.0" text="PRIX VENTE" />
                     <TableColumn fx:id="colStatut" prefWidth="100.0" text="STATUT" />
                  </columns>
                  <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
               </TableView>
            </VBox>
         </children>
      </VBox>
   </center>
</BorderPane>