<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.SVGPath?>

<BorderPane prefHeight="800.0" prefWidth="1200.0" stylesheets="@application.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="JavaFXProject.DashboardController">
   
   <!-- MENU GAUCHE -->
   <left>
      <VBox prefWidth="260.0" styleClass="sidebar" BorderPane.alignment="CENTER">
         <children>
            <HBox styleClass="logo-box">
               <children>
                  <Label styleClass="logo-g" text="G" />
                  <Label styleClass="logo-text" text=" GARAGE" />
                  <Label styleClass="logo-text, logo-accent" text="MGR" />
               </children>
            </HBox>
            
            <Label style="-fx-text-fill: #555; -fx-font-size: 11px; -fx-padding: 0 0 5 10; -fx-font-weight: bold;" text="MENU PRINCIPAL" />
            
            <Button maxWidth="Infinity" mnemonicParsing="false" styleClass="menu-btn, menu-btn-active" text="Tableau de Bord" />
            <Button maxWidth="Infinity" mnemonicParsing="false" styleClass="menu-btn" text="Stock Véhicules" />
            <Button maxWidth="Infinity" mnemonicParsing="false" styleClass="menu-btn" text="Ventes &amp; Clients" />
            <Button maxWidth="Infinity" mnemonicParsing="false" styleClass="menu-btn" text="Atelier &amp; SAV" />
            
            <Pane VBox.vgrow="ALWAYS" /> 
            
            <HBox alignment="CENTER_LEFT" spacing="12.0" style="-fx-padding: 20 0 0 0; -fx-border-color: #333; -fx-border-width: 1 0 0 0;">
               <children>
                  <Label style="-fx-background-color: #333; -fx-background-radius: 20; -fx-text-fill: #ff9800; -fx-padding: 8 14; -fx-font-weight: bold; -fx-font-size: 14px;" text="A" />
                  <VBox>
                     <children>
                        <Label style="-fx-text-fill: white; -fx-font-weight: bold;" text="Admin" />
                        <Label style="-fx-text-fill: #666; -fx-font-size: 11px;" text="Directeur" />
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </left>

   <!-- CONTENU CENTRAL -->
   <center>
      <VBox spacing="30.0" styleClass="content-area" BorderPane.alignment="CENTER">
         <children>
            
            <VBox>
               <children>
                  <Label styleClass="page-title" text="Tableau de Bord" />
                  <Label styleClass="page-subtitle" text="Vue d'ensemble de l'activité du garage." />
               </children>
            </VBox>

            <!-- KPI Cards -->
            <HBox spacing="25.0">
               <children>
                  <HBox styleClass="stat-card" HBox.hgrow="ALWAYS" spacing="20.0" alignment="CENTER_LEFT">
                     <children>
                        <VBox styleClass="stat-icon-container, icon-orange">
                           <Label style="-fx-text-fill: #ff9800; -fx-font-size: 24px;" text="€" />
                        </VBox>
                        <VBox>
                           <Label fx:id="lblPrixMoyen" styleClass="stat-value" text="0 €" />
                           <Label styleClass="stat-label" text="PRIX MOYEN VENTE" />
                        </VBox>
                     </children>
                  </HBox>
                  
                  <HBox styleClass="stat-card" HBox.hgrow="ALWAYS" spacing="20.0" alignment="CENTER_LEFT">
                     <children>
                        <VBox styleClass="stat-icon-container, icon-blue">
                           <!-- Icône Voiture (Stock) -->
                           <SVGPath content="M18.92 6.01C18.72 5.42 18.16 5 17.5 5h-11c-.66 0-1.21.42-1.42 1.01L3 12v8c0 .55.45 1 1 1h1c.55 0 1-.45 1-1v-1h12v1c0 .55.45 1 1 1h1c.55 0 1-.45 1-1v-8l-2.08-5.99zM6.5 16c-.83 0-1.5-.67-1.5-1.5S5.67 13 6.5 13s1.5.67 1.5 1.5S7.33 16 6.5 16zm11 0c-.83 0-1.5-.67-1.5-1.5s.67-1.5 1.5-1.5 1.5.67 1.5 1.5-.67 1.5-1.5 1.5zM5 11l1.5-4.5h11L19 11H5z" fill="#2196f3" scaleX="1.3" scaleY="1.3" />
                        </VBox>
                        <VBox>
                           <Label fx:id="lblTotalStock" styleClass="stat-value" text="0" />
                           <Label styleClass="stat-label" text="VÉHICULES EN STOCK" />
                        </VBox>
                     </children>
                  </HBox>
                  
                  <HBox styleClass="stat-card" HBox.hgrow="ALWAYS" spacing="20.0" alignment="CENTER_LEFT">
                     <children>
                        <VBox styleClass="stat-icon-container, icon-red">
                           <!-- Icône Clé à molette (Atelier) -->
                           <SVGPath content="M22.7 19l-9.1-9.1c.9-2.3.4-5-1.5-6.9-2-2-5-2.4-7.4-1.3L9 6 6 9 1.6 4.7C.4 7.1.9 10.1 2.9 12.1c1.9 1.9 4.6 2.4 6.9 1.5l9.1 9.1c.4.4 1 .4 1.4 0l2.3-2.3c.5-.4.5-1.1.1-1.4z" fill="#f44336" scaleX="1.3" scaleY="1.3" />
                        </VBox>
                        <VBox>
                           <Label fx:id="lblAtelier" styleClass="stat-value" text="0" />
                           <Label styleClass="stat-label" text="EN ATELIER" />
                        </VBox>
                     </children>
                  </HBox>
               </children>
            </HBox>

            <!-- TABLEAU 1: Top 3 -->
            <VBox styleClass="stat-card" VBox.vgrow="ALWAYS">
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-padding: 0 0 15 0; -fx-border-color: transparent transparent #2a2a2a transparent; -fx-border-width: 1;">
                     <children>
                        <!-- Icône Voiture en SVG -->
                        <SVGPath content="M18.92 6.01C18.72 5.42 18.16 5 17.5 5h-11c-.66 0-1.21.42-1.42 1.01L3 12v8c0 .55.45 1 1 1h1c.55 0 1-.45 1-1v-1h12v1c0 .55.45 1 1 1h1c.55 0 1-.45 1-1v-8l-2.08-5.99zM6.5 16c-.83 0-1.5-.67-1.5-1.5S5.67 13 6.5 13s1.5.67 1.5 1.5S7.33 16 6.5 16zm11 0c-.83 0-1.5-.67-1.5-1.5s.67-1.5 1.5-1.5 1.5.67 1.5 1.5-.67 1.5-1.5 1.5zM5 11l1.5-4.5h11L19 11H5z" fill="#666666" scaleX="1.1" scaleY="1.1" />
                        <Label styleClass="section-header-text" text="Vitrine Prestige (Top 3)" />
                        <Pane HBox.hgrow="ALWAYS" />
                   
                     </children>
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin>
                  </HBox>
                  
                  <TableView fx:id="tableTop3" VBox.vgrow="ALWAYS">
                    <columns>
                      <!-- AJOUT DE sortable="false" pour empêcher le tri -->
                      <TableColumn fx:id="colMarque" prefWidth="150.0" text="MARQUE" sortable="false" />
                      <TableColumn fx:id="colModele" prefWidth="200.0" text="MODÈLE" sortable="false" />
                      <TableColumn fx:id="colPrix" prefWidth="150.0" text="PRIX VENTE" sortable="false" />
                      <TableColumn fx:id="colStatut" prefWidth="120.0" text="STATUT" sortable="false" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
            </VBox>

            <!-- TABLEAU 2: Employés -->
            <VBox styleClass="stat-card" VBox.vgrow="ALWAYS">
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-padding: 0 0 15 0; -fx-border-color: transparent transparent #2a2a2a transparent; -fx-border-width: 1;">
                     <children>
                        <!-- Icône Équipe en SVG -->
                        <SVGPath content="M16 11c1.66 0 2.99-1.34 2.99-3S17.66 5 16 5c-1.66 0-3 1.34-3 3s1.34 3 3 3zm-8 0c1.66 0 2.99-1.34 2.99-3S9.66 5 8 5C6.34 5 5 6.34 5 8s1.34 3 3 3zm0 2c-2.33 0-7 1.17-7 3.5V19h14v-2.5c0-2.33-4.67-3.5-7-3.5zm8 0c-.29 0-.62.02-.97.05 1.16.84 1.97 1.97 1.97 3.45V19h6v-2.5c0-2.33-4.67-3.5-7-3.5z" fill="#666666" scaleX="1.1" scaleY="1.1" />
                        <Label styleClass="section-header-text" text="Équipe du Garage" />
                     </children>
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin>
                  </HBox>
                  
                  <TableView fx:id="tableEmployes" VBox.vgrow="ALWAYS">
                    <columns>
                      <!-- AJOUT DE sortable="false" pour empêcher le tri -->
                      <TableColumn fx:id="colEmpNom" prefWidth="150.0" text="NOM" sortable="false" />
                      <TableColumn fx:id="colEmpPrenom" prefWidth="150.0" text="PRÉNOM" sortable="false" />
                      <TableColumn fx:id="colEmpPoste" prefWidth="150.0" text="POSTE" sortable="false" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
            </VBox>

         </children>
      </VBox>
   </center>
</BorderPane>