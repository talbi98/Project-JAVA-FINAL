<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="700.0" prefWidth="1000.0" stylesheets="@application.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="JavaFXProject.DashboardController">
   
   <left>
      <VBox prefWidth="250.0" styleClass="sidebar" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="5.0">
               <children>
                  <Label style="-fx-background-color: #ff9800; -fx-text-fill: black; -fx-font-weight: bold; -fx-padding: 5 10; -fx-background-radius: 5;" text="G" />
                  <Label styleClass="logo-label" text="GARAGE" />
                  <Label styleClass="logo-accent" text="MGR" />
               </children>
               <VBox.margin>
                  <Insets bottom="40.0" top="10.0" />
               </VBox.margin>
            </HBox>
            
            <Label style="-fx-text-fill: #666; -fx-font-size: 10px; -fx-padding: 0 0 0 10;" text="MENU PRINCIPAL" />
            
            <Button maxWidth="Infinity" mnemonicParsing="false" styleClass="menu-btn, menu-btn-active" text="Dashboard" />
            <Button maxWidth="Infinity" mnemonicParsing="false" styleClass="menu-btn" text="Stock &amp; Catalogue" />
            <Button maxWidth="Infinity" mnemonicParsing="false" styleClass="menu-btn" text="Ventes" />
            <Button maxWidth="Infinity" mnemonicParsing="false" styleClass="menu-btn" text="Atelier &amp; SAV" />
            <Button maxWidth="Infinity" mnemonicParsing="false" styleClass="menu-btn" text="Factures" />
         </children>
      </VBox>
   </left>

   <center>
      <VBox styleClass="content-area" BorderPane.alignment="CENTER">
         <children>
            
            <VBox spacing="5.0">
               <children>
                  <Label styleClass="header-title" text="Tableau de Bord" />
                  <Label styleClass="header-subtitle" text="Vue d'ensemble de l'activité du garage." />
               </children>
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </VBox>

            <HBox spacing="20.0">
               <children>
                  <VBox styleClass="stat-card" HBox.hgrow="ALWAYS">
                     <children>
                        <Label fx:id="lblPrixMoyen" styleClass="stat-value" text="0 €" />
                        <Label styleClass="stat-label" text="Prix Moyen Ventes" />
                     </children>
                  </VBox>
                  
                  <VBox styleClass="stat-card" HBox.hgrow="ALWAYS">
                     <children>
                        <Label fx:id="lblTotalStock" styleClass="stat-value" text="0" />
                        <Label styleClass="stat-label" text="Véhicules Disponibles" />
                     </children>
                  </VBox>
                  
                  <VBox styleClass="stat-card" HBox.hgrow="ALWAYS">
                     <children>
                        <Label fx:id="lblAtelier" styleClass="stat-value" text="--"/>
                        <Label styleClass="stat-label" text="État Atelier" />
                     </children>
                  </VBox>
               </children>
            </HBox>

            <Label styleClass="header-title" style="-fx-font-size: 20px; -fx-padding: 20 0 10 0;" text="Vitrine Prestige (Top 3)" />
            
            <TableView fx:id="tableTop3" prefHeight="200.0" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="colMarque" prefWidth="150.0" text="Marque" />
                <TableColumn fx:id="colModele" prefWidth="200.0" text="Modèle" />
                <TableColumn fx:id="colPrix" prefWidth="150.0" text="Prix" />
                <TableColumn fx:id="colStatut" prefWidth="100.0" text="Statut" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>

         </children>
      </VBox>
   </center>
</BorderPane>