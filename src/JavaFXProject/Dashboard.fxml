<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.SVGPath?>

<BorderPane prefHeight="800.0" prefWidth="1200.0" stylesheets="@application.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="JavaFXProject.DashboardController">
   
  
   <left>
      <VBox prefWidth="260.0" styleClass="sidebar" BorderPane.alignment="CENTER">
         <children>
            <HBox styleClass="logo-box">
               <children>
                  <Label styleClass="logo-g" text="G" />
                  <Label styleClass="logo-text" text=" GARAGE" />
                  <Label styleClass="logo-text, logo-accent" text="MGR" />
               </children>
            </HBox>
            
            <Label style="-fx-text-fill: #555; -fx-font-size: 11px; -fx-padding: 0 0 5 10; -fx-font-weight: bold;" text="MENU PRINCIPAL" />
            
            <Button maxWidth="Infinity" mnemonicParsing="false" styleClass="menu-btn, menu-btn-active" text="Tableau de Bord" />
            
            <Button maxWidth="Infinity" mnemonicParsing="false" onAction="#handleBtnStock" styleClass="menu-btn" text="Stock Véhicules" />
            
            <Button maxWidth="Infinity" mnemonicParsing="false" onAction="#handleBtnCommerce" styleClass="menu-btn" text="Ventes &amp; Clients" />
            
            <Button maxWidth="Infinity" onAction="#handleBtnAtelier" styleClass="menu-btn" text="Atelier &amp; SAV" />            
                    
            <Pane VBox.vgrow="ALWAYS" /> 
            
            <HBox alignment="CENTER_LEFT" spacing="12.0" style="-fx-padding: 20 0 0 0; -fx-border-color: #333; -fx-border-width: 1 0 0 0;">
               <children>
                  <Label style="-fx-background-color: #ff9800; -fx-background-radius: 20; -fx-text-fill: black; -fx-padding: 8 14; -fx-font-weight: bold;" text="A" />
                  <VBox>
                     <children>
                        <Label style="-fx-text-fill: white; -fx-font-weight: bold;" text="Admin" />
                        <Label style="-fx-text-fill: #666; -fx-font-size: 11px;" text="Directeur" />
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </left>

  
   <center>
      <VBox spacing="25.0" styleClass="content-area" BorderPane.alignment="CENTER">
         <children>
            
            <VBox>
               <children>
                  <Label styleClass="page-title" text="Vue d'ensemble" />
                  <Label styleClass="page-subtitle" text="Suivi en temps réel des performances du garage." />
               </children>
            </VBox>
            
           
            <HBox spacing="20.0">
               <children>
                 
                  <VBox prefWidth="300.0" styleClass="stat-card">
                     <children>
                        <Label styleClass="stat-label" text="CHIFFRE D'AFFAIRES" />
                        <Label fx:id="lblPrixMoyen" styleClass="stat-value" text="0 €" />
                        <HBox alignment="CENTER_LEFT" spacing="5.0" style="-fx-padding: 10 0 0 0;">
                           <children>
                              <SVGPath content="M7 11l5-5 5 5M7 17l5-5 5 5" fill="#69f0ae" />
                              <Label style="-fx-text-fill: #69f0ae; -fx-font-size: 11px; -fx-font-weight: bold;" text="+12.5% vs mois dernier" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  
                 
                  <VBox prefWidth="300.0" styleClass="stat-card">
                     <children>
                        <Label styleClass="stat-label" text="VÉHICULES EN STOCK" />
                        <Label fx:id="lblTotalStock" styleClass="stat-value" text="0" />
                        <Label style="-fx-text-fill: #666; -fx-font-size: 11px; -fx-padding: 10 0 0 0;" text="Unités disponibles immédiatement" />
                     </children>
                  </VBox>
                  
                 
                  <VBox prefWidth="300.0" styleClass="stat-card">
                     <children>
                        <Label styleClass="stat-label" text="EN ATELIER" />
                        <Label fx:id="lblAtelier" styleClass="stat-value" text="0" />
                        <Label style="-fx-text-fill: #666; -fx-font-size: 11px; -fx-padding: 10 0 0 0;" text="Interventions en cours de traitement" />
                     </children>
                  </VBox>
               </children>
            </HBox>

           
            <HBox spacing="25.0" VBox.vgrow="ALWAYS">
               <children>
                  
                
                  <VBox spacing="15.0" styleClass="stat-card" HBox.hgrow="ALWAYS">
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <SVGPath content="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z" fill="#ff9800" scaleX="0.8" scaleY="0.8" />
                              <Label style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px;" text="Vitrine Prestige (Top 3)" />
                           </children>
                        </HBox>
                        <TableView fx:id="tableTop3" VBox.vgrow="ALWAYS">
                          <columns>
                            <TableColumn fx:id="colMarque" prefWidth="100.0" text="MARQUE" />
                            <TableColumn fx:id="colModele" prefWidth="120.0" text="MODÈLE" />
                            <TableColumn fx:id="colPrix" prefWidth="100.0" text="PRIX" />
                            <TableColumn fx:id="colStatut" prefWidth="100.0" text="STATUT" />
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                  </VBox>
                  
                 
                  <VBox prefWidth="400.0" spacing="15.0" styleClass="stat-card">
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <SVGPath content="M16 11c1.66 0 2.99-1.34 2.99-3S17.66 5 16 5c-1.66 0-3 1.34-3 3s1.34 3 3 3zm-8 0c1.66 0 2.99-1.34 2.99-3S9.66 5 8 5C6.34 5 5 6.34 5 8s1.34 3 3 3zm0 2c-2.33 0-7 1.17-7 3.5V19h14v-2.5c0-2.33-4.67-3.5-7-3.5zm8 0c-.29 0-.62.02-.97.05 1.16.84 1.97 1.97 1.97 3.45V19h6v-2.5c0-2.33-4.67-3.5-7-3.5z" fill="#666" />
                              <Label style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px;" text="Équipe du Garage" />
                           </children>
                        </HBox>
                        <TableView fx:id="tableEmployes" VBox.vgrow="ALWAYS">
                          <columns>
                            <TableColumn fx:id="colEmpNom" prefWidth="100.0" text="NOM" />
                            <TableColumn fx:id="colEmpPrenom" prefWidth="100.0" text="PRÉNOM" />
                            <TableColumn fx:id="colEmpPoste" prefWidth="120.0" text="POSTE" />
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                  </VBox>
                  
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>