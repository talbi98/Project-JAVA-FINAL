<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #1a1a1d; -fx-padding: 30;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="JavaFXProject.FormulaireVenteController">
    
    <Label style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" text="Enregistrer une Vente" />

    <VBox spacing="5" alignment="CENTER_LEFT">
        <Label style="-fx-text-fill: #888;" text="Sélectionner le Client" />
        <ComboBox fx:id="comboClient" prefWidth="350.0" promptText="Choisir un client..." style="-fx-base: #333; -fx-control-inner-background: #333; -fx-text-fill: white;" />
    </VBox>

    <VBox spacing="5" alignment="CENTER_LEFT">
        <Label style="-fx-text-fill: #888;" text="Sélectionner le Véhicule (Dispo uniquement)" />
        <ComboBox fx:id="comboVehicule" prefWidth="350.0" promptText="Choisir un véhicule..." style="-fx-base: #333; -fx-control-inner-background: #333; -fx-text-fill: white;" />
    </VBox>

    <Label fx:id="lblPrix" style="-fx-text-fill: #f59e0b; -fx-font-size: 16px; -fx-font-weight: bold;" text="Montant : 0 €" />

    <HBox alignment="CENTER_RIGHT" spacing="15.0" style="-fx-padding: 20 0 0 0;">
        <Button fx:id="btnAnnuler" style="-fx-background-color: transparent; -fx-text-fill: #888; -fx-cursor: hand; -fx-border-color: #555; -fx-border-radius: 5;" text="Annuler" />
        <Button fx:id="btnValider" style="-fx-background-color: #f59e0b; -fx-text-fill: black; -fx-font-weight: bold; -fx-cursor: hand; -fx-background-radius: 5;" text="VALIDER LA VENTE" />
    </HBox>

</VBox>