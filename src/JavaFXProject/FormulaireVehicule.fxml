<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15.0" style="-fx-background-color: #1a1a1d; -fx-padding: 30;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="JavaFXProject.FormulaireController">
    
    <Label style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" text="Ajouter un Véhicule" />

    <VBox spacing="5" alignment="CENTER_LEFT">
        <Label style="-fx-text-fill: #888; -fx-font-size: 12px;" text="Motorisation" />
        <ComboBox fx:id="comboType" prefWidth="300.0" promptText="Choisir le type..." style="-fx-base: #333; -fx-control-inner-background: #333; -fx-text-fill: white;" />
    </VBox>

    <TextField fx:id="txtMarque" promptText="Marque (ex: Audi)" style="-fx-background-color: #333; -fx-text-fill: white; -fx-prompt-text-fill: #666;" />

    <TextField fx:id="txtModele" promptText="Modèle (ex: RS6)" style="-fx-background-color: #333; -fx-text-fill: white; -fx-prompt-text-fill: #666;" />

    <TextField fx:id="txtImmat" promptText="Immatriculation (AA-123-BB)" style="-fx-background-color: #333; -fx-text-fill: white; -fx-prompt-text-fill: #666;" />

    <TextField fx:id="txtPrix" promptText="Prix de vente (€)" style="-fx-background-color: #333; -fx-text-fill: white; -fx-prompt-text-fill: #666;" />

    <HBox alignment="CENTER_RIGHT" spacing="15.0" style="-fx-padding: 20 0 0 0;">
        <Button fx:id="btnAnnuler" style="-fx-background-color: transparent; -fx-text-fill: #888; -fx-cursor: hand; -fx-border-color: #555; -fx-border-radius: 5;" text="Annuler" />
        <Button fx:id="btnValider" style="-fx-background-color: #f59e0b; -fx-text-fill: black; -fx-font-weight: bold; -fx-cursor: hand; -fx-background-radius: 5;" text="AJOUTER AU STOCK" />
    </HBox>

</VBox>