<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="800.0" prefWidth="1200.0" stylesheets="@application.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="JavaFXProject.AtelierController">
   
   <left>
      <VBox prefWidth="260.0" styleClass="sidebar" BorderPane.alignment="CENTER">
         <children>
            <HBox styleClass="logo-box">
               <children>
                  <Label styleClass="logo-g" text="G" />
                  <Label styleClass="logo-text" text=" GARAGE" />
                  <Label styleClass="logo-text, logo-accent" text="MGR" />
               </children>
            </HBox>
            
            <Label style="-fx-text-fill: #555; -fx-padding: 20 0 5 10; -fx-font-weight: bold;" text="MENU PRINCIPAL" />
            
            <Button maxWidth="Infinity" onAction="#handleBtnDashboard" styleClass="menu-btn" text="Tableau de Bord" />
            <Button maxWidth="Infinity" onAction="#handleBtnStock" styleClass="menu-btn" text="Stock Véhicules" />
            <Button maxWidth="Infinity" onAction="#handleBtnCommerce" styleClass="menu-btn" text="Ventes &amp; Clients" />
<Button maxWidth="Infinity" onAction="#handleBtnAtelier" styleClass="menu-btn" text="Atelier &amp; SAV" />
            
            <Pane VBox.vgrow="ALWAYS" /> 
         </children>
      </VBox>
   </left>

   <center>
      <VBox spacing="25.0" styleClass="content-area" BorderPane.alignment="CENTER">
         <children>
            
            <VBox>
               <Label styleClass="page-title" text="Atelier Mécanique" />
               <Label styleClass="page-subtitle" text="Suivi des interventions techniques en cours." />
            </VBox>

            <HBox alignment="CENTER_RIGHT" spacing="15.0">
               <Button onAction="#handleNouvelleIntervention" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-padding: 10 20; -fx-background-radius: 8;" text="+ NOUVELLE INTERVENTION" />
            </HBox>

            <VBox styleClass="stat-card" VBox.vgrow="ALWAYS">
               <TableView fx:id="tableReparations" VBox.vgrow="ALWAYS">
                 <columns>
                   <TableColumn fx:id="colVehicule" prefWidth="200.0" text="VÉHICULE" />
                   <TableColumn fx:id="colMecanicien" prefWidth="150.0" text="MÉCANICIEN" />
                   <TableColumn fx:id="colDescription" prefWidth="300.0" text="DESCRIPTION" />
                   <TableColumn fx:id="colPrix" prefWidth="100.0" text="COÛT" />
                   <TableColumn fx:id="colStatut" prefWidth="120.0" text="ÉTAT" />
                 </columns>
                  <columnResizePolicy>
                     <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                  </columnResizePolicy>
               </TableView>
            </VBox>
            
            <HBox alignment="CENTER_RIGHT">
               <Button onAction="#handleTerminerIntervention" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-cursor: hand; -fx-padding: 10 20; -fx-background-radius: 8;" text="✔ MARQUER COMME TERMINÉE" />
            </HBox>

         </children>
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>