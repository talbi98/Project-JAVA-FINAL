<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="800.0" prefWidth="1200.0" style="-fx-background-color: #121212;" stylesheets="@application.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="JavaFXProject.CommerceController">
   <left>
      <VBox prefWidth="260.0" styleClass="sidebar" BorderPane.alignment="CENTER">
         <children>
            <HBox styleClass="logo-box"><Label styleClass="logo-g" text="G" /><Label styleClass="logo-text" text=" GARAGE MGR" /></HBox>
            <Label style="-fx-text-fill: #555; -fx-font-size: 11px; -fx-padding: 0 0 5 10; -fx-font-weight: bold;" text="MENU PRINCIPAL" />
            <Button onAction="#handleBtnDashboard" maxWidth="Infinity" styleClass="menu-btn" text="Tableau de Bord" />
            <Button onAction="#handleBtnStock" maxWidth="Infinity" styleClass="menu-btn" text="Stock Véhicules" />
            <Button maxWidth="Infinity" styleClass="menu-btn, menu-btn-active" text="Ventes &amp; Clients" />
            <Button onAction="#handleBtnAtelier" maxWidth="Infinity" styleClass="menu-btn" text="Atelier &amp; SAV" />            
            <Button fx:id="btnFactures" onAction="#handleBtnFactures" maxWidth="Infinity" styleClass="menu-btn" text="Factures &amp; Compta" />
            <Pane VBox.vgrow="ALWAYS" /> 
            <Button onAction="#handleLogout" text="SE DÉCONNECTER" maxWidth="Infinity" style="-fx-background-color: transparent; -fx-text-fill: #ff6b6b; -fx-alignment: CENTER_LEFT; -fx-padding: 12 20; -fx-cursor: hand; -fx-font-weight: bold;" />
            <HBox alignment="CENTER_LEFT" spacing="12.0" style="-fx-padding: 20 0 0 0; -fx-border-color: #333; -fx-border-width: 1 0 0 0;">
               <Label fx:id="lblUserInitial" style="-fx-background-color: #ff9800; -fx-background-radius: 20; -fx-text-fill: black; -fx-padding: 8 14; -fx-font-weight: bold;" text="A" />
               <VBox><Label fx:id="lblUserName" style="-fx-text-fill: white; -fx-font-weight: bold;" text="User" /><Label fx:id="lblUserRole" style="-fx-text-fill: #666; -fx-font-size: 11px;" text="Role" /></VBox>
            </HBox>
         </children>
      </VBox>
   </left>
   <center>
      <VBox spacing="20.0" styleClass="content-area" BorderPane.alignment="CENTER">
         <children>
            <VBox spacing="10.0" VBox.vgrow="ALWAYS">
                <HBox alignment="CENTER_LEFT">
                    <Label styleClass="page-title" text="Dernières Ventes" style="-fx-font-size: 18px;" />
                    <Pane HBox.hgrow="ALWAYS" />
                    <Button fx:id="btnNouvelleVente" onAction="#handleNouvelleVente" text="+ NOUVELLE VENTE" style="-fx-background-color: #4caf50; -fx-text-fill: white; -fx-font-weight: bold;" />
                </HBox>
                <VBox styleClass="stat-card" VBox.vgrow="ALWAYS">
                   <TableView fx:id="tableVentes" VBox.vgrow="ALWAYS">
                      <columns>
                         <TableColumn fx:id="colVenteRef" text="Réf" />
                         <TableColumn fx:id="colVenteDate" text="Date" />
                         <TableColumn fx:id="colVenteVehicule" text="Véhicule" />
                         <TableColumn fx:id="colVenteClient" text="Client" />
                         <TableColumn fx:id="colVenteMontant" text="Montant" />
                      </columns>
                      <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
                   </TableView>
                </VBox>
            </VBox>
            <VBox spacing="10.0" VBox.vgrow="ALWAYS">
                <HBox alignment="CENTER_LEFT">
                    <Label styleClass="page-title" text="Base Clients" style="-fx-font-size: 18px;" />
                    <Pane HBox.hgrow="ALWAYS" />
                    <Button fx:id="btnNouveauClient" onAction="#handleNouveauClient" text="+ NOUVEAU CLIENT" style="-fx-background-color: #2196f3; -fx-text-fill: white; -fx-font-weight: bold;" />
                </HBox>
                <VBox styleClass="stat-card" VBox.vgrow="ALWAYS">
                   <TableView fx:id="tableClients" VBox.vgrow="ALWAYS">
                      <columns>
                         <TableColumn fx:id="colClientNom" text="Nom Complet" />
                         <TableColumn fx:id="colClientEmail" text="Email" />
                         <TableColumn fx:id="colClientVip" text="Statut VIP" />
                      </columns>
                      <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
                   </TableView>
                </VBox>
            </VBox>
         </children>
      </VBox>
   </center>
</BorderPane>